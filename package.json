{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.tsx",
    "test": "bun tests/run-all-tests.ts",
    "test:config": "bun tests/config-loader.test.ts",
    "test:mongodb": "bun tests/mongodb.test.ts",
    "test:kafka": "bun tests/kafka.test.ts"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "kafkajs": "^2.2.4",
    "mongodb": "^6.10.0",
    "react": "^19",
    "react-dom": "^19",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  }
}
